@model List<UserViewModel>

    @{
    ViewData["Title"] = "Users";
}
<h1>Users and Roles</h1>
<a class="btn btn-primary" asp-action="AddUser">Add New User</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            @* <th>UserName</th> *@
            <th>Roles</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
            @* <td>@user.UserName</td> *@
            <td>@string.Join(" , ", user.Roles.ToList())</td>
            <td>
                <a class="btn btn-primary" asp-controller="Users" asp-action="ManageRole" asp-route-userId="@user.Id">Manage Roles</a>
                <a class="btn btn-success" asp-controller="Users" asp-action="EditUser" asp-route-userId="@user.Id">Edit</a>
            </td>
        </tr>
        }
    </tbody>
</table>